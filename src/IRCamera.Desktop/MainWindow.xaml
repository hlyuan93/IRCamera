<Window
    x:Class="IRCamera.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRCamera.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <!--  控制按钮  -->
            <StackPanel
                Grid.Row="0"
                Margin="10"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5"
                    Click="BtnInit_Click"
                    Content="1. 初始化SDK" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="BtnQuery_Click"
                    Content="2. 查询设备" />
                <ComboBox
                    x:Name="CmbDevices"
                    Width="150"
                    Margin="5" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="BtnConnect_Click"
                    Content="3. 连接" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="BtnInfo_Click"
                    Content="4. 获取信息" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="BtnSave_Click"
                    Content="5. 保存图像" />
                <Button
                    Width="80"
                    Margin="5"
                    Click="Button_Click"
                    Content="停止" />
            </StackPanel>

            <StackPanel>
                <Image
                    x:Name="CameraImage"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="Uniform" />
                <!--  日志输出  -->
                <TextBox
                    x:Name="TxtLog"
                    Grid.Row="1"
                    Margin="10"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </StackPanel>

        </StackPanel>

        <!--  状态栏  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="就绪" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
